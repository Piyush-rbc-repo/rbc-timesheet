@model  Timesheet.Modal.TimesheetCreateModal

@using (Ajax.BeginForm("Create", null, new AjaxOptions() { HttpMethod = "post", OnSuccess = "onSuccess", OnFailure = "onFailure" }, new {id="CreateForm" }))
{
    <div class="form-group" style="height:45px;padding-top:5px;border:1px solid #dadada;background-color:#f3f3f3;pointer-events:all">
        @Html.HiddenFor(m => m.Id)
        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.Activitydate)
            @Html.TextBoxFor(m => m.Activitydate, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Activitydate)
        </div>

        <div class="col-lg-2" style="display:none" >
            @Html.DisplayNameFor(m => m.ResourceId)
            @Html.DropDownListFor(m => m.ResourceId, (SelectList)ViewBag.ResourceListMe, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ResourceId)
        </div>

        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.ProjectId)
            @Html.DropDownListFor(m => m.ProjectId, (SelectList)ViewBag.ProjectList, "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ProjectId)
        </div>

        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.CrNumberId)
            @Html.DropDownListFor(m => m.CrNumberId, (SelectList)ViewBag.CrList, "Select", new { @class = "form-control" }) @*disabled="disabled"*@
            @Html.ValidationMessageFor(m => m.CrNumberId)
        </div>


        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.ActivityId)
            @Html.DropDownListFor(m => m.ActivityId, (SelectList)ViewBag.ActivityList, "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ActivityId)
        </div>


        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.SubActivity)
            @Html.TextBoxFor(m => m.SubActivity, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SubActivity)
        </div>



        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.Efforts)
            @Html.TextBoxFor(m => m.Efforts, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Efforts)
        </div>



        <div class="col-lg-cust_12">
            @Html.DisplayNameFor(m => m.IsBillable)
            @Html.DropDownListFor(m => m.IsBillable, (SelectList)ViewBag.BillableEnum, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.IsBillable)
        </div>

        
        @*<div class="col-lg-2" >
            @Html.DisplayNameFor(m => m.Comments)
            @Html.TextBoxFor(m => m.Comments, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Comments)
        </div>*@

        <div class="col-lg-12">
            <div>&nbsp;</div>
            <input type="submit" value="Save" id="save" />
            <input type="button" onclick="ClearCreateForm()" value="Clear" />         
            <input type="button" title="Bulk Upload" onclick="showBulkUplodDialog()" value="Bulk Upload" class="pull-right" style="background-color:#78BFAC;display:@(ViewBag.BulkUpload)" />
            

        </div>       
        </div>


}
